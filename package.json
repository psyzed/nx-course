{
  "name": "nx-playground",
  "version": "1.0.0",
  "description": "Nx Workspaces Playground for the course by Decoded Frontend",
  "author": "Dmytro Mezhenskyi",
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.0.0"
  },
  "scripts": {
    "format": "prettier . --write",
    "postinstall": "echo \"Let's go crafting! ðŸš€âœ¨\""
  },
  "nx": {
    "namedInputs": {
      "sharedGlobals": [],
      "default": [
        "sharedGlobals",
        "{projectRoot}/**/*"
      ],
      "production": [
        "default",
        "!{projectRoot}/eslint.config.cjs",
        "!{projectRoot}/README.md",
        "!{projectRoot}/**/*.spec.[jt]s",
        "!{projectRoot}/jest.config.ts"
      ]
    },
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "options": {
          "main": "{projectRoot}/src/server.ts",
          "tsConfig": "{projectRoot}/tsconfig.json",
          "outputPath": "{workspaceRoot}/dist"
        },
        "cache": "true",
        "inputs": [
          "production"
        ]
      },
      "test": {
        "executor": "@nx/jest:jest",
        "options": {
          "jestConfig": "{projectRoot}/jest.config.ts",
          "passWithNoTests": true,
          "codeCoverage": true,
          "coverageDirectory": "{workspaceRoot}/coverage"
        },
        "cache": "true",
        "inputs": [
          "default"
        ],
        "outputs": [
          "{options.coverageDirectory}"
        ]
      },
      "serve": {
        "executor": "@nx/js:node",
        "options": {
          "buildTarget": "build"
        },
        "defaultConfiguration": "development",
        "configurations": {
          "development": {},
          "production": {
            "watch": false,
            "inspect": false
          }
        },
        "dependsOn": [
          {
            "target": "build",
            "projects": "online-store-api",
            "params": "ignore"
          }
        ]
      },
      "lint": {
        "executor": "@nx/eslint:lint",
        "options": {
          "eslintConfig": "{projectRoot}/eslint.config.cjs"
        }
      }
    },
    "name": "online-store-api",
    "metadata": {
      "description": "A demo REST api build on to of ExpressJS"
    },
    "projectType": "application",
    "sourceRoot": "src",
    "includedScripts": []
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@nx/eslint": "^20.8.4",
    "@nx/eslint-plugin": "^20.8.4",
    "@nx/jest": "^20.8.4",
    "@nx/js": "^20.8.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "nx": "^20.8.4",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  }
}
