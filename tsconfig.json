{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "CommonJS",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "tmp"
  ]
}
